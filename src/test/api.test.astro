---
import LayoutBase from '@/layouts/LayoutBase.astro'
import AppClient from '@/react/AppClient'

const title = 'API Test Page'
---

<LayoutBase title={title}>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-6">API Test Page</h1>
        
        <div class="bg-gray-800 rounded-lg p-6">
            <p class="text-gray-300 mb-4">This is a test page for API functionality.</p>
            
            <AppClient componentName="TestComponent" client:load />
        </div>
    </div>
</LayoutBase>
